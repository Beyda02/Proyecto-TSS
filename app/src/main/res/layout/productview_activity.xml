<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bce7c9"
    tools:context="com.example.myar.MainActivity">

    <Toolbar
        android:id="@+id/toolbarTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#55b50d"
        android:titleTextColor="@color/colorWhite"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/Theme.AppCompat.Light.NoActionBar">

    </Toolbar>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/product_frame">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:cropToPadding="true"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/my_border"
            app:siBorderColor="@color/colorProductBackground"
            app:siBorderWidth="4dp"
            app:siRadius="10dp"
            app:siSquare="true" />
    </RelativeLayout>



    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_frame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Nombre del producto"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="Descripcion del producto"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="italic"></TextView>


    <Toolbar
        android:id="@+id/toolbarBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scrollbarStyle="insideInset"
                android:text="20 Bs"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="italic"></TextView>

            <Button
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="85dp"
                android:text="Ver con AR"
                android:textSize="12dp"
                android:background="#55b50d"
                android:id="@+id/previewButton"
                android:layout_centerVertical="true">
            </Button>

            <Button
                android:id="@+id/addToCartButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="85dp"
                android:background="#55b50d"
                android:text="Agregar al carrito"
                android:textSize="10dp">

            </Button>
        </RelativeLayout>
    </Toolbar>
</RelativeLayout>

